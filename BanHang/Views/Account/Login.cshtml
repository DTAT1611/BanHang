@using BanHang.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-xA0NIEBcZVKqMHUwYMgRnMtwLyHiJj5M2OGmiqXbXQlRJDDN8q7gAxoN+b9a9kDM" crossorigin="anonymous">
<div class="container" style="margin-top:160px">
    <hr />
    <h2>Mời bạn đăng nhập để mua hàng</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Đăng nhập để nhận nhiều ưu đãi.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                       <label style=" padding-right: 15px; padding-left: 15px;">Tài khoản</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label style=" padding-right: 15px; padding-left: 15px;">Mật khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control pwd" })
                            <a href="#" type="button" class="btnShow" value="Show" style="display:inline">show</a>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <label>Nhớ mật khẩu</label>
                            </div>
                        </div>
                    </div>
                    <div class="button">
                        <div class="col-md-offset-2 col-md-10">
                            <input style="padding-right: 0; cursor: pointer;" type="submit" value="Đăng nhập" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="col-ls-5">
                        <div>
                            @Html.ActionLink("Đăng ký", "Register")
                        </div>
                            <div style="margin-top:-23px;margin-left:75px">
                                 @Html.ActionLink("Quên mật khẩu", "ForgotPassword")
                            </div>
                           
                        
                      
                            
                    </div>
                }
            </section>
        </div>
        @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $(".btnShow").click(function () {
            if ($(this).val() == "Show") {
                $(this).val("Hide");
                $(".pwd").attr("type", "text");
            } else {
                $(this).val("Show");
                $(".pwd").attr("type", "password");
            }
        });
        //$(".btnShow").mousedown(function () {
        //    $(".pwd").attr("type", "text");
        //});
        //$(".btnShow").on("mouseleave", function () {
        //    $(".pwd").attr("type", "password");
        //});
    </script>

}