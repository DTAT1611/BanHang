@model IEnumerable<BanHang.Models.EF.Sale>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="text-center"><input type="checkbox" id="SelectAll" /></th>


                        <th class="text-center">Tên sản phẩm</th>
                        <th class="text-center">phần trăm giảm</th>
                       

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        foreach (var item in Model)
                        {
                            
                            <tr id="trow_@item.id">
                                
                                
                                @*@if (item.productid == 0)
                                {*@
                                    
                                    @if (item.status == 0)
                                    {
                                        <td><input type="checkbox" class="cbkItem" value="@item.id" /></td>
                                    }

                                    <td class="text-center">@item.productid</td>
                                    <td class="text-center">@item.percent%</td>
                                    <td>
                                        @if (item.status == 1)
                                        {
                                            <a href="javascript:void(0);" class="btn btn-danger" onclick="Cancle(@item.id);">Hủy</a>
                                        }
                                    </td>
                                @*}*@


                            </tr>

                        }
                    }

                </tbody>
            </table>


        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnApDung', function () {

                var id = $(this).data("id");
                $('#txtSId').val(id);
                $('#modal-s').modal('show');

            });
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;

                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {

                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');

                    } else {
                        checkbox.attr('selected', '');
                    }
                });
            });
            $('body').on('click', '#btnLuu', function () {  
                
                var str = " ";
                var checkbox = $('.card-body').parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('bạn có muốn sử dụng phiếu giảm giá không');
                    if (conf === true) {
                        $.ajax({
                            url: '/addtocart/usesale',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });
        });
        function Cancle(id) {
            var id = id;
            $.ajax({
                url: '/addtocart/canclesale',
                type: 'POST',
                data: { id: id },
                success: function (rs) {
                    if (rs.success) {
                        location.reload();
                    }
                }
            });
        }

    </script>


