@model BanHang.Models.OrderViewModel
@using (Ajax.BeginForm("CheckOut", "AddToCart", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete="OnSuccessCO",
    OnFailure="OnFailure"


},new {@Id="myForm"}))
{

    @Html.AntiForgeryToken()

    <div style=" left:50px; top:70px" class="form-group">

        <label>Họ Tên Khách Hàng: </label>
        <input type="text" name="CustomerName"required class="form-control" autocomplete="off" />

    </div>
    <div style=" left:50px; top:70px"required class="form-group">

        <label>Số Điện thoại: </label>
        <input type="text" name="Phone"required class="form-control" autocomplete="off" />

    </div>
    <div style=" left:50px; top:70px" class="form-group">

        <label>Địa chỉ: </label>
        <input type="text" name="Address" class="form-control" autocomplete="off" />


    </div>
    <div style=" left:50px; top:70px" class="form-group">

        <label>Email: </label>
        <input type="text" name="Email" class="form-control" autocomplete="off" />

    </div>
    <div style=" left:50px; top:70px" class="form-group">

        <label>Hình Thức Thanh Toán</label>
        <select class="form-control" name="TypePayment">
            <option value="1" selected>COD</option>
            <option value="2">chuyển khoản</option>
        </select>

    </div>
    <div style=" left:50px; top:70px" class="form-group">

        <input type="submit" value="Đặt hàng" />

    </div>
}
