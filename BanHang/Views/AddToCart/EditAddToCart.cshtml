@using BanHang.Models
@model List<BanHang.Models.EF.AddToCart>
@{
    ViewBag.Title = "EditAddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/asets/styles/single_styles.css">


<table style="margin-top:200px;margin-left:200px;">
    <tr>
        <td style="border: 1px solid black; text-align: center">Mã  </td>

        <td style="border: 1px solid black; text-align: center">Tên  </td>



        <td style="border: 1px solid black; text-align: center">Đơn giá </td>

        <td style="border: 1px solid black; text-align: center">Số lượng </td>

        <td style="border: 1px solid black; text-align: center">Thành Tiền </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px solid black; text-align: center">@item.iId</td>

            <td style="border: 1px solid black; text-align: center">@item.stitle</td>



            <td style="border: 1px solid black; text-align: center">@item.dprice VND</td>
            @using (Html.BeginForm("UpdateAddToCart", "AddToCart", new { @ip = item.iId, @strURL = Request.Url.ToString() }))
            {
                <td style="border: 1px solid black; text-align: center">@Html.TextBox("txtsoluong", item.isoluong)</td>


                <td style="border: 1px solid black; text-align: center">@item.ThanhTien VND</td>
                <td><input type="submit" value="Cập nhật" /></td>

                <td>@Html.ActionLink("Delete", "DeleteAddToCart", new { ip = item.iId })</td>
            }




        </tr>
    }

</table>

