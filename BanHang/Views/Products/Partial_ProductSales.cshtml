@model IEnumerable<BanHang.Models.EF.Product>
@using BanHang.Common
@if (Model != null && Model.Any())
{

                           foreach (var item in Model)
                            {
                                var strImge = "";
                                var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                                if (img != null)
                                {
                                    strImge = img.Image;
                                }

                                <div class="owl-item product_slider_item" >
                                    <div class="product-item @ViewBag.ProductCategoryAlias">
                                        <div class="product discount product_filter" style="border: 5px solid rgb(233, 233, 233); padding-right:10px;">
                                            <div class="product_image" style="height:300px">
                                                <img src="@strImge" alt="@item.Title">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            @if (item.PriceSale > 0)
                                            {
                                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                                            }
                                            @* <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>*@
                                            <div class="product_info" style="bottom:150px">
                                                <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                                                @if (item.PriceSale > 0)
                                                {
                                                    <div class="product_price">@BanHang.Common.Common.FormatNumber(item.PriceSale, 0)<span>@BanHang.Common.Common.FormatNumber(item.Price, 0)</span></div>

                                                }
                                                else
                                                {
                                                    <div class="product_price">@BanHang.Common.Common.FormatNumber(item.Price, 0)</div>
                                                }
                                            </div>
                                        </div>
                                        <div class="red_button add_to_cart_button"><a href="/chi-tiet/@item.Alias-p@(item.Id)" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
                                    </div>
                                </div>

                            }

                      

}
